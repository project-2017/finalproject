<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_container_1_h"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/fragment_container_2_h"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/stringText_mainfragement_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/deleteString_h"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <!--<Button-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="@string/deleteString_h" />-->

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_fg22_h"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linearLayout_fg1_h"
                    android:layout_width="138dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/setDayofWeekString_h"
                        android:textAlignment="center"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/spinner_fg_h"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:entries="@array/stringArray_dayOfWeek_h"
                        android:gravity="center"
                        android:textAlignment="center" />

                </LinearLayout>


                <TimePicker
                    android:id="@+id/timePicker_fg_h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:timePickerMode="spinner" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_fg3_h"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="@string/setTempString_h"
                    android:textAlignment="center"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/temperature_fg_h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/setTempString_h"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout_fg5_h"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:dividerPadding="8dp"
                android:gravity="center|fill"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_delete_fg_h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/deleteString_h" />

                <Button
                    android:id="@+id/button_saveNewRule_fg_h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/saveAsNewRuleString_h" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_fg6_h"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center|fill"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_save_fg_h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/saveString_h"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/button_cancel_fg_h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/cancelString_h"
                    android:textAlignment="center" />

            </LinearLayout>
            <View
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>